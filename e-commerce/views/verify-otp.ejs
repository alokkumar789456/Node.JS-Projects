<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link href="./output.css" rel="stylesheet">
</head>
<body>
    <div class="otp-container">
        <h2>Verify Your OTP</h2>
        <form id="otpForm">
            <input type="hidden" name="email" value="<%= email %>" />
            <div class="form-group">
                <label for="otp">Enter OTP:</label>
                <input type="text" id="otp" name="otp" required />
            </div>
            <button type="submit">Verify OTP</button>
        </form>
        <div id="error-message" style="color: red;"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        document.getElementById('otpForm').addEventListener('submit', async (event) => {
            event.preventDefault(); // Prevent the default form submission

            const email = event.target.email.value;
            const otp = event.target.otp.value;

            try {
                const response = await axios.post("http://localhost:3000/verify-otp", {
                    email,
                    otp
                });
                
                // Handle successful verification
                alert(response.data);
                window.location.href = "/login"; // Redirect to login page or elsewhere
            } catch (error) {
                // Handle errors
                if (error.response) {
                    document.getElementById('error-message').innerText = error.response.data;
                } else {
                    document.getElementById('error-message').innerText = "An unexpected error occurred.";
                }
            }
        });
    </script>
</body>
</html>
