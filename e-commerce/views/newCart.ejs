<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link href="./output.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Your Cart</title>
</head>
<body class="bg-gray-100 p-6">
    <h1 class="text-3xl font-bold mb-6 text-center">Your Cart</h1>
    <ul class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
        <% if (products.length > 0) { %>
            <% products.forEach(item => { %>
                <li class="mb-4 border-b pb-4">
                    <% if (item.productDetails) { %>
                        <h2 class="text-xl font-semibold"><%= item.productDetails.title %></h2>
                        <p class="text-lg text-gray-700">Price: $<%= item.productDetails.price.toFixed(2) %></p>
                        <form action="/remove-from-cart" method="POST" class="mt-2">
                            <input type="hidden" name="productId" value="<%= item.productId %>">
                            <button type="submit" class="bg-red-500 text-white py-1 px-3 rounded hover:bg-red-600 transition">Remove from My Cart</button>
                        </form>
                    <% } else { %>
                        <p class="text-red-500">Product details not available.</p>
                    <% } %>
                </li>
            <% }); %>
        <% } else { %>
            <li class="text-center text-gray-600">Your cart is empty.</li>
        <% } %>
    </ul>
</body>
</html>
