    <h1 class="text-3xl font-bold mb-6 text-center">Your Cart</h1>
    <ul class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
        <% if (products.length > 0) { %>
            <% products.forEach(item => { %>
                <li class="mb-4 border-b pb-4">
                    <h2 class="text-xl font-semibold"><%= item.productId.title %></h2>
                    <p class="text-lg">Price: $<%= item.productId.price %></p>
                    <form action="/cart/remove-from-cart" method="POST" class="mt-2">
                        <input type="hidden" name="productId" value="<%= item.productId._id %>">
                        <button type="submit" class="bg-red-500 text-white py-1 px-3 rounded hover:bg-red-600">Remove from My Cart</button>
                    </form>
                </li>
            <% }); %>
        <% } else { %>
            <li class="text-center">Your cart is empty.</li>
        <% } %>
    </ul>
</body>
</html>
