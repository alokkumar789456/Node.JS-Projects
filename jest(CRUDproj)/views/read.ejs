<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <title>Users List</title>
</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col items-center p-4">
    <div class="bg-gray-800 p-8 rounded-b-lg shadow-xl w-full max-w-4xl border-b border-gray-700 mb-4"> 
        <div class="nav mb-4">
            <a href="/" class="text-blue-400 hover:underline">Back to Home</a>
        </div>
        <h1 class="text-xl font-bold mb-6 text-center">All Users</h1> 
    </div>
   
    <% if (users.length > 0) { %>  
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 w-full max-w-5xl">
            <% users.forEach(function(user) { %>
                <div class="flex flex-col bg-gray-800 p-4 rounded-lg shadow-xl h-60 border-b border-gray-700"> 
                    <img src="<%= user.image %>" alt="Profile Picture" class="w-24 h-24 border border-gray-500 rounded-full mx-auto mb-4"> 
                    <div class="flex flex-col items-center space-y-2">
                        <h3 class="text-lg font-semibold"><%= user.name %></h3> 
                        <h5 class="text-sm text-gray-400"><%= user.email %></h5>
                    </div>
                    <div class="mt-auto flex space-x-2 text-sm justify-center">
                        <a href="/edit/<%= user._id %>" class="text-blue-400 hover:underline">Edit User</a>
                        <a href="/delete/<%= user._id %>" class="text-red-400 hover:underline">Delete User</a>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <h1 class="text-white">No users yet...</h1>
    <% } %>

    <script src="/javascript/script.js"></script>
</body>
</html>
